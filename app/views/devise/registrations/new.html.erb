<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, autocomplete: "email", placeholder: "Nom complet", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control"  %>
      </div>

      <div class="form-group">
        <br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Mot de passe", class: "form-control"  %>
      </div>

      <div class="actions">
        <%= f.submit "Inscription", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>